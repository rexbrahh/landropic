# direnv configuration for Nix flake
# Install direnv: brew install direnv
# Then run: direnv allow

use flake

# Export development environment variables
export RUST_BACKTRACE=1
export RUST_LOG=landropic=debug
export CARGO_BUILD_JOBS=4
export RUSTC_WRAPPER=""

# Add local bin to PATH for development tools
PATH_add ./target/debug
PATH_add ./target/release

# Project-specific settings
export LANDROPIC_DATA_DIR="$HOME/.local/share/landropic"
export LANDROPIC_CONFIG_DIR="$HOME/.config/landropic"

echo "ðŸš€ Landropic development environment loaded"
echo "ðŸ“¦ Run 'just' to see available commands"