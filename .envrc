# Environment setup for landropic development
# Install direnv: brew install direnv

# Rust toolchain optimizations
export CARGO_INCREMENTAL=1
export CARGO_NET_GIT_FETCH_WITH_CLI=true

# Use sccache for faster builds (install: brew install sccache)
export RUSTC_WRAPPER=sccache

# Increase parallel jobs for cargo
export CARGO_BUILD_JOBS=0  # Use all cores

# Faster linking on macOS
export RUSTFLAGS="-C link-arg=-fuse-ld=/usr/bin/ld"

# Development database for testing
export DATABASE_URL="sqlite://./test.db"

# Enable rust analyzer proc macro support
export RUST_ANALYZER_PROC_MACRO_ENABLE=1

# Faster test execution
export RUST_TEST_THREADS=0  # Use all cores for tests

echo "ðŸ¦€ Landropic development environment loaded"
echo "   - Multi-core builds enabled"
echo "   - Shared compilation cache active"
echo "   - Fast linking configured"